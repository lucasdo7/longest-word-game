<div class="container">
  <div class="divs">
    <h1>Welcome to the longest word-game!</h1>
    <h2>Here is your grid:</h2>

    <ul class="letters">
      <% @letters.each do |letter| %>
        <li><%= letter %></li>
      <% end %>
    </ul>

    <form action="/score" method="POST" data-turbo="false">
      <p class="form-prefix">What is the longest word you can find?</p>
      <div class="input-group">
        <input type="text" name="word" class="form-control">
        <input type="submit" class="btn btn-primary" value = "Play">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :letters, @letters %>
      </div>
    </form>
  </div>
</div>
